<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_homepage_pa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hkust.mutualpatientsupport.Homepage_paActivity">

    <Button
        android:text="共享\n位置"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_location"
        android:background="@android:color/holo_orange_dark"
        android:padding="40dp"
        android:freezesText="false"
        android:textSize="24sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button_news"
        android:layout_alignStart="@+id/button_contact" />

    <Button
        android:text="回家"
        android:id="@+id/button_gohome"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@android:style/Widget.Button"
        android:background="@android:color/holo_orange_dark"
        android:padding="40dp"
        android:textSize="24sp"
        android:layout_alignTop="@+id/button_contact"
        android:layout_alignStart="@+id/button_reminder"
        android:layout_alignBottom="@+id/button_contact"
        android:layout_alignEnd="@+id/button_reminder" />

    <Button
        android:text="名片"
        android:id="@+id/button_name_card"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@android:style/Widget.Button"
        android:background="@android:color/holo_orange_dark"
        android:padding="40dp"
        android:textSize="24sp"
        android:layout_alignTop="@+id/button_news"
        android:layout_alignEnd="@+id/button_reminder"
        android:layout_alignBottom="@+id/button_news"
        android:layout_alignStart="@+id/button_reminder" />

    <Button
        android:text="新聞\n活動"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_news"
        android:background="@android:color/holo_orange_dark"
        android:padding="40dp"
        android:textSize="24sp"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button_location" />

    <Button
        android:text="提醒\n事項"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_reminder"
        android:background="@android:color/holo_orange_dark"
        android:padding="40dp"
        android:freezesText="false"
        android:textSize="24sp"
        android:layout_marginStart="23dp"
        android:layout_alignBaseline="@+id/button_location"
        android:layout_alignBottom="@+id/button_location"
        android:layout_alignParentStart="true" />

    <Button
        android:text="緊急\n聯絡"
        android:id="@+id/button_contact"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@android:style/Widget.Button"
        android:background="@android:color/holo_orange_dark"
        android:padding="40dp"
        android:layout_marginEnd="18dp"
        android:textSize="24sp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/button_location"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_logout"
        android:paddingRight="90dp"
        android:paddingLeft="90dp"
        android:background="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:layout_below="@+id/button_gohome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />
</RelativeLayout>
